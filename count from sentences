s = input("Enter the sentence: ")
w, d, u, l = 0, 0, 0, 0
list_of_words = s.split()  
w = len(list_of_words)
for c in s:
    if c.isdigit():
        d += 1
    elif c.isupper():
        u += 1
    elif c.islower():
        l += 1
print("Number of words: ", w)
print("Number of digits: ", d)
print("Number of uppercase: ",u)
print("Number of lowercase: ",l)
